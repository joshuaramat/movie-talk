<div class="card">
  <h3 class="card-header">Edit Post</h3>

  <form id="edit-post-form" class="card-body">
    <div class="form-group">
      <label for="title">Title</label>
      <input id="title-post" type="text" value="{{post.title}}" class="form-control" />
    </div>
    <div class="form-group">
      <label class="form-label" for="content">Content</label>
      <input id="content-post" type="text" value="{{post.content}}" class="form-control" />
    </div>
    <button type="submit" class="button btn">Update Post</button>
    <button id="delete-button" type="button" class="button btn">Delete Post</button>
  </form>

  <div class="card-footer">
    Posted by you on {{ format_date post.created_at }}
    <span class="divider">|</span>
    {{ post.vote_count }} {{ format_plural "like" post.vote_count }}
    <span class="divider">|</span>
    <a href="/post/{{ post.id }}">{{ post.comments.length }} {{ format_plural "comment" post.comments.length }}</a>
  </div>
</div>

{{#if post.comments.length}}
  {{> comments post.comments}}
{{/if}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
