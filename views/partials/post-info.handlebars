<div class="card">
  <div class="card-header">
    <h4><a class="link" href="/post/{{id}}">{{title}}</a></h4>
  </div>
  <span class="card-body">{{content}}</span>
  <div class="card-footer">
    <span>Posted by {{user.username}} on {{format_date created_at}}</span>
    <span class="divider">|</span>
    {{vote_count}} {{format_plural "like" vote_count}}
    <span class="divider">|</span>
    <a href="/post/{{id}}">{{ comments.length }} {{ format_plural "comment" comments.length }}</a>
  </div>
</div>
